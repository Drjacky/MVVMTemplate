<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    app:startDestination="@id/chooseFragment">

    <fragment
        android:id="@+id/chooseFragment"
        android:name="app.web.drjackycv.presentation.products.choose.ChooseFragment"
        tools:layout="@layout/fragment_choose">

        <action
            android:id="@+id/navigateToProductsListFragment"
            app:destination="@id/productsListFragment" />

    </fragment>

    <fragment
        android:id="@+id/productsListFragment"
        android:name="app.web.drjackycv.presentation.products.productlist.ProductsListFragment"
        tools:layout="@layout/fragment_product_list">

        <action
            android:id="@+id/navigateToProductDetailFragment"
            app:destination="@id/productDetailFragment" />

        <argument
            android:name="choosePathType"
            android:defaultValue="RX"
            app:argType="app.web.drjackycv.presentation.products.choose.ChoosePathType" />

    </fragment>

    <fragment
        android:id="@+id/productDetailFragment"
        android:name="app.web.drjackycv.presentation.products.productdetail.ProductDetailFragment"
        tools:layout="@layout/fragment_product_detail">

        <argument
            android:name="productDetailBeerUI"
            app:argType="app.web.drjackycv.presentation.products.entity.BeerUI" />

    </fragment>

</navigation>